<%= form_for @login_form, url: { action: :create }, html: { class: "well form-horizontal" } do |f| %>
  <% if @login_form.errors.any? %>
    <%= error_messages(@login_form) %>
  <% end %>
  <fieldset>
    <div class="controll-group<%= mark_error(@login_form, :username) %>">
    <%= f.label :username, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :username, class: "input-large" %>
    </div>
  </div>
  <br/>
  <div class="controll-group<%= mark_error(@login_form, :password) %>">
    <%= f.label :password, class: "control-label" %>
    <div class="controls">
      <%= f.password_field :password, class: "input-large" %>
    </div>
  </div>
  <%# <br/> %>
  <%# <div class="controll-group"> %>
    <%# <div class="controls"> %>
      <%#= f.label :remember_me, class: "checkbox" do %>
        <%#= f.check_box :remember_me %>
        <%#= t('sessions.remember_me') %>
      <%# end %>
    <%# </div> %>
  <%# </div> %>
  <div class="form-actions">
    <%= f.submit t('login'), class: "btn btn-primary" %>
  </div>
  </fieldset>
<% end %>
