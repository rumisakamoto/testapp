<%= form_for @tag, html: { class: "form-horizontal" } do |f| %>
  <%- if @tag.errors.any? -%>
    <%= error_messages(@tag) %>
  <%- end -%>

<fieldset>

  <div class="control-group<%= mark_error(@tag, :name) %>">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group<%= mark_error(@tag, :icon_url) %>">
    <%= f.label :icon_url, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :icon_url, class: "input-xxlarge" %>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-actions">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
</fieldset>
<% end %>
